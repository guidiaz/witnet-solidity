{
  "name": "witnet-solidity",
  "version": "2.0.1",
  "description": "Witnet CLI import module for Solidity projects",
  "author": "Witnet Foundation",
  "license": "MIT",
  "private": false,
  "type": "commonjs",
  "bin": {
    "witnet": "dist/bin/witnet.js"
  },
  "exports": {
    ".": "./dist/lib/radon/index.js",
    "./assets": "./witnet/assets/index.js",
    "./radon": "./dist/lib/radon/index.js",
    "./utils": "./dist/utils.js"
  },
  "files": [
    "dist",
    "witnet",
    ".env_witnet"
  ],
  "types": "./dist/lib/radon",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "console": "npx truffle console",
    "fmt": "eslint test --ext .js,.ts,.cjs --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\"",
    "fmt!": "eslint test --ext .js,.ts,.cjs --fix --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\" --fix",
    "postinstall": "npx witnet-toolkit update",
    "prepare": "npm run build",
    "test": "npm run build && cross-env-shell WITNET_SOLIDITY_REQUIRE_RELATIVE_PATH='../../witnet' WITNET_SOLIDITY_MODULE_PATH='./witnet' node ./dist/bin/witnet.js test --all"
  },
  "keywords": [
    "solidity",
    "oracle",
    "witnet",
    "evm",
    "www",
    "randomness",
    "data feeds",
    "data requests",
    "typescript",
    "javascript",
    "truffle"
  ],
  "dependencies": {
    "cbor": "^9.0.1",
    "dotenv": "^16.4.1",
    "graphql-query-compress": "^1.2.4",
    "ethereumjs-util": "^7.1.5",
    "inquirer": "^8.0.0",
    "lodash.merge": "^4.6.2",
    "truffle": "^5.11.5",
    "web3-jsonrpc-gateway": "../../witnet/web3-jsonrpc-gateway",
    "witnet-solidity-bridge": "../witnet-solidity-bridge",
    "witnet-toolkit": "../witnet-utils"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/node": "^20.11.13",
    "typescript": "latest"
  }
}
