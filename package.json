{
  "name": "witnet-solidity",
  "version": "2.0.1",
  "description": "Witnet CLI import module for Solidity projects",
  "author": "Witnet Foundation",
  "license": "MIT",
  "private": false,
  "type": "commonjs",
  "bin": {
    "witnet": "src/bin/witnet.js"
  },
  "exports": {
    ".": "./witnet/assets/index.js",
    "./assets": "./witnet/assets/index.js",
    "./utils": "./witnet/scripts/utils.js"
  },
  "files": [
    "src",
    "witnet",
    ".env_witnet"
  ],
  "scripts": {
    "console": "npx truffle console",
    "fmt": "eslint test --ext .js,.ts,.cjs --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\"",
    "fmt!": "eslint test --ext .js,.ts,.cjs --fix --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\" --fix",
    "postinstall": "npx witnet-toolkit update",
    "test": "cross-env-shell WITNET_SOLIDITY_REQUIRE_RELATIVE_PATH='../../../witnet' WITNET_SOLIDITY_MODULE_PATH='./witnet' node ./src/bin/witnet.js test"
  },
  "keywords": [
    "solidity",
    "oracle",
    "witnet",
    "evm",
    "www",
    "randomness",
    "data feeds",
    "data requests",
    "typescript",
    "javascript",
    "truffle"
  ],
  "dependencies": {
    "cbor": "^9.0.1",
    "dotenv": "^16.4.1",
    "graphql-query-compress": "^1.2.4",
    "inquirer": "^8.0.0",
    "truffle": "^5.11.5",
    "witnet-solidity-bridge": "^2.0.1",
    "witnet-toolkit": "^2.0.1"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5"
  }
}
