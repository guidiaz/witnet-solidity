{
  "name": "witnet-solidity",
  "version": "2.1.0-beta.0",
  "description": "Wit/Oracle SDK package for Solidity projects",
  "author": "Witnet Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/witnet/witnet-solidity/"
  },
  "private": false,
  "type": "commonjs",
  "bin": {
    "witnet-solidity": "src/bin/solidity.js"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/lib/radon/*.d.ts"
    },
    "./assets": "./witnet/assets/index.js"
  },
  "files": [
    "dist",
    "src/bin",
    "witnet",
    ".env_witnet"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "fmt": "eslint --ext .js,.ts,.cjs . --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\"",
    "fmt!": "eslint --ext .js,.ts,.cjs . --fix --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\" --fix",
    "prepare": "pnpm run build",
    "test": "cross-env-shell WITNET_SOLIDITY_REQUIRE_RELATIVE_PATH='../../../witnet' WITNET_SOLIDITY_MODULE_PATH='./witnet' node ./src/bin/witnet.js test"
  },
  "keywords": [
    "solidity",
    "oracle",
    "witnet",
    "wit/oracle",
    "evm",
    "www",
    "randomness",
    "data feeds",
    "data requests",
    "typescript",
    "javascript",
    "truffle"
  ],
  "dependencies": {
    "dotenv": "^16.4.1",
    "inquirer": "^8.0.0",
    "truffle": "^5.11.5",
    "witnet-solidity-bridge": "2.1.0-beta.0",
    "witnet-toolkit": "^2.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "cbor": "^10.0.3",
    "cross-env": "7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "solhint": "^4.1.1"
  }
}
