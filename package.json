{
  "name": "witnet-solidity",
  "version": "2.0.0",
  "description": "Witnet CLI import module for Solidity projects",
  "author": "Witnet Foundation",
  "license": "MIT",
  "private": false,
  "bin": {
    "witnet": "build/bin/witnet.js"
  },
  "files": [
    "witnet/**",
    "build/bin",
    ".env_witnet"
  ],
  "scripts": {
    "build": "babel src -d build",
    "compile": "npm run build && truffle compile",
    "console": "truffle console",
    "fmt": "eslint test --ext .js,.ts,.cjs --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\"",
    "fmt!": "eslint test --ext .js,.ts,.cjs --fix --ignore-path .gitignore && solhint --max-warnings 0 \"witnet/migrations/contracts/**/*.sol\" --fix",
    "witnet": "cross-env-shell WITNET_SOLIDITY_PROJECT_PATH='../../witnet' node ./src/bin/witnet.js",
    "postinstall": "npx witnet-toolkit update",
    "prepare": "npm run build",
    "test": "npm run build && cross-env-shell WITNET_SOLIDITY_PROJECT_PATH='../../witnet' node ./build/bin/witnet.js check"
  },
  "keywords": [
    "solidity",
    "oracle",
    "witnet",
    "evm",
    "www",
    "randomness",
    "data feeds",
    "data requests",
    "typescript",
    "javascript",
    "truffle"
  ],
  "dependencies": {
    "witnet-solidity-bridge": "https://github.com/witnet/witnet-solidity-bridge#8a8f0472ae689502b593157f26e0938dc09fcaf1",
    "witnet-utils": "^1.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.15.0",
    "chai": "^4.3.7",
    "cross-env": "7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "truffle": "^5.7.1"
  }
}
